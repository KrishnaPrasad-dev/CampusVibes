    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="w-full min-h-screen bg-zinc-900 text-white p-10">
        <div class="flex items-end w-full justify-end">
            <a class="bg-red-500 rounded-md px-3 py-2 text-sm inline-block mb-5 " href="/logout">Logout</a>
        </div>
        <div class="flex items-start gap-3">
            <div class="w-14 h-14 rounded-md">
                <img class="w-full h-full object-cover" src="/images/uploads/<%= user.profilepic %>" alt="">
            </div>
            <h3 class="text-3xl "><span class="font-light"> Hello</span>, <%= user.name %> ğŸ˜</h3>
    
        </div>
         <h5 class="mb-5 mt-3">You can create a new post.</h5>
        <form action="/post" method="post">
            <textarea placeholder="What's on your mind" class=" block p-3 outline-none w-1/3 resize-none bg-transparent border-2 border-zinc-800 rounded-md" name="content"></textarea>
            <input  class="px-3 py-2 bg-blue-500 block rounded-md mt-2 w-40 text-sm  " type="submit" value="Create new post">
        </form>
        <div class="posts mt-20">
            <h3 class="text-zinc-400">Your Posts</h3>
            <div class="postcontainer mt-5 ">
                <% user.posts.reverse().forEach(function(post){ %>
                    <div class="post mb-5 w-1/3 p-4 rounded-md bg-zinc-800  border-zinc-900">
                        <h3 class="text-blue-500 mb-3">@<%= user.username  %></h3>
                        <p class="text-10 tracking-tighter"><%= post.content %></p>
                        <small class="mt-1 inline-block"><%= post.likes.length %> likes</small>
                        <div class="btns flex gap-4 mt-2 ">
                            <a class="text-blue-500" href="/like/<%= post._id %>">
                                <%= post.likes.indexOf(user._id) === -1  ? "ğŸ‘Like" : "ğŸ‘Unlike"  %>
                            </a>
                            <a class="text-zinc-600" href="/edit/<%= post._id%>">ğŸ¤Edit</a>
                        </div>
                    </div>

                    <% }) %>
            </div>
        </div>
        
    </div>
</body>
</html>